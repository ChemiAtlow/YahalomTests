{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"lib": ["ES6"],
		"sourceMap": true,
		"outDir": "./out",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true
	},
	"exclude": ["node_modules", "out"]
}
