{
	"name": "@yahalom-tests/server",
	"version": "1.0.0",
	"description": "Server of the uahalom tests",
	"main": "dist/app",
	"types": "dist/app",
	"files": [
		"dist"
	],
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "nodemon --watch src/ -e ts --exec \"npm run build && node --inspect ./dist/app\"",
		"lint": "eslint src --ext ts",
		"build": "npm run clean && npm run lint && npm run compile",
		"clean": "del -rf \"./dist\" && del -rf \"tsconfig.build.tsbuildinfo\"",
		"compile": "tsc -b tsconfig.build.json",
		"prepublishOnly": "npm run build"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"@yahalom-tests/common": "^1.0.0"
	},
	"devDependencies": {
		"@types/compression": "^1.7.0",
		"@types/cors": "^2.8.8",
		"@types/express": "^4.17.8",
		"@types/node": "^14.14.20",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.4.1",
		"eslint": "^7.9.0",
		"nodemon": "^2.0.4",
		"typescript": "^4.0.2"
	}
}
